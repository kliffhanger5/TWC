<Window x:Name="MANULE" x:Class="TWCLauncher.ManualWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TWCLauncher"
        mc:Ignorable="d"
        Title="Join Private/Public server" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.687"/>
            <GradientStop Color="#FF636363" Offset="1"/>
            <GradientStop Color="#FF181818" Offset="0.761"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="JoinButton" Content="Join" HorizontalAlignment="Left" Margin="526,217,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="IPInput" HorizontalAlignment="Left" Height="23" Margin="233,216,0,0" TextWrapping="Wrap" Text="byond://127.0.0.7" VerticalAlignment="Top" Width="288" UndoLimit="50" TextChanged="IPInput_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="233,244,0,0" TextWrapping="Wrap" Text="Enter the public/private server's IP address that you would like to Join." VerticalAlignment="Top" Width="288" Height="16" Foreground="White" FontStyle="Italic" FontSize="9"/>

    </Grid>
</Window>
